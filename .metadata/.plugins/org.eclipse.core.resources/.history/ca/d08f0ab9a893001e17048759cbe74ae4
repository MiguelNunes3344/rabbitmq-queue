package com.br.consumerstock.consumer;

import org.springframework.amqp.rabbit.annotation.RabbitListener;
import org.springframework.stereotype.Component;

import com.br.stock.dto.Stock;

@Component
public class StockConsumer {

	private final static String NAME_QUEUE = "STOCK";
	
	
	@RabbitListener(queues = NAME_QUEUE)
	public void consumer(Stock stock) {
		System.out.println(stock.getProductCode());
		System.out.println(stock.getQuantity());
		System.out.println("Event consumed");
		
	}
}
